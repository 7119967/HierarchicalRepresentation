@model Entity
@{
    
}

<li class="list-group-item list-group-item-action" id="li-@Model.Id">
    <div class="row align-items-center justify-content-evenly">
        <div class="col p-0">
             @if (@Model.Icon != null)
             {
                <a class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Model.Id" aria-expanded="false" aria-controls="collapse-@Model.Id" onclick="expanding(this)">
                    <i class="ri-add-line"></i>
                </a>
             }
        </div>
        <div class="col-8 col-sm-8 col-md-8 col-lg-10 p-0">
            <span>@Html.Raw(@Model.Icon)</span>
            <a onclick="previewing(@Model.Id)" data-bs-toggle="modal" data-bs-target="#modalDetaiils" asp-controller="Entity" asp-action="Expand" asp-route-parentId="@Model.Id">@Model.Name</a>
        </div>
        <div class="col pe-2">
            <div class="dropdown">
                <button class="btn dropdown-toggle" id="dropdownMenuButton2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ri-menu-line"></i>
                </button>
                <ul class="dropdown-menu align-items-center justify-content-evenly" aria-labelledby="dropdownMenuButton2">
                    <li class="dropdown-item">
                        <i class="ri-add-line"></i>
                        <button class="btn" data-bs-toggle="modal" data-bs-target="#modalCreate" onclick="creating('@Model.Id')">Create</button>
                    </li>
                    <li class="dropdown-item">
                        <i class="ri-file-edit-line"></i>
                        <button class="btn" data-bs-toggle="modal" data-bs-target="#modalEdit" onclick="editing('@Model.Id')">Edit</button>
                    </li>
                    <li class="dropdown-item">
                        <i class="ri-delete-bin-6-line"></i>
                        <button class="btn" onclick="deleting('@Model.Id', this)">Delete</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</li>